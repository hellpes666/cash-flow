{
	"printWidth": 80,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"bracketSpacing": true,
	"trailingComma": "es5",
	"arrowParens": "always",
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrderParserPlugins": ["typescript", "decorators-legacy"],
	"importOrder": [
		"^@nestjs/",
		"^nestjs/",
		"<THIRD_PARTY_MODULES>",
		"^@/(.*)$",
		"^../(.*)$",
		"^./(.*)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
